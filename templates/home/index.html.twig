{% extends 'base.html.twig' %}

{% block title %}Price Comparison{% endblock %}

{% block body %}
<div class="bg-gray-100 min-h-screen">
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold mb-8 text-center text-gray-800">Price Comparison</h1>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for item in products %}
                <div class="bg-white shadow-lg rounded-lg overflow-hidden transition-transform duration-300 hover:scale-105">
                    <img src="{{ item[0].imageUrl }}" alt="{{ item[0].name }}" class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h2 class="text-xl font-semibold mb-2 text-gray-800">{{ item[0].name }}</h2>
                        <p class="text-gray-600 mb-4 h-12 overflow-hidden">{{ item[0].description }}</p>
                        <div class="flex justify-between items-center">
                            <span class="text-2xl font-bold text-green-600">â‚¬{{ item['lowestPrice']|number_format(2, '.', ',') }}</span>
                            <a href="{{ path('app_product_show', {'id': item[0].id}) }}" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition-colors duration-300">View Details</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
