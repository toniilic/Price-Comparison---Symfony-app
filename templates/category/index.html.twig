{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <h1>Categories</h1>
    <ul>
    {% for category in categories %}
        <li><a href="{{ path('app_category', {'slug': category.slug}) }}">{{ category.name }}</a></li>
    {% endfor %}
    </ul>
{% endblock %}
